{
  "name": "resonai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3003",
    "dev:ci": "next dev -p 3003",
    "build": "next build",
    "start": "next start -p 3003",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test --project=firefox",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:noweb:win": "cmd /c \"set PW_DISABLE_WEBSERVER=1 && playwright test --config=playwright/playwright.noweb.config.ts --project=firefox\"",
    "test:coach": "npx playwright test tests/coach_policy.spec.ts --project=firefox",
    "test:isolation": "npx playwright test tests/isolation.spec.ts --project=firefox",
    "test:privacy": "npx playwright test tests/privacy_a11y.spec.ts --project=firefox",
    "test:all": "npm run test:unit && npm run test:e2e",
    "playwright:install": "npx playwright install",
    "playwright:ui": "npx playwright test --ui",
    "playwright:report": "npx playwright show-report"
  },
  "dependencies": {
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "typescript": "^5",
    "vitest": "^1.0.0"
  }
}